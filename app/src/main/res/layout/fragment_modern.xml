<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ModernActivity"
    android:background="@drawable/border"
    android:baselineAligned="false">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_weight=".80"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/rectangleOne"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_weight="3">

            <LinearLayout
                android:id="@+id/rectangleOneOne"
                android:background="@drawable/border"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <FrameLayout
                    android:id="@+id/frameOne"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ff0bffb9" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rectangleOneTwo"
                android:background="@drawable/border"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5">

                <FrameLayout
                    android:id="@+id/frameTwo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffff0e0d" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rectangleTwo"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_weight="2">

            <LinearLayout
                android:id="@+id/rectangleTwoOne"
                android:background="@drawable/border"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5">

                <FrameLayout
                    android:id="@+id/frameThree"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffb60b" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rectangleTwoTwo"
                android:background="@drawable/border"
                android:orientation="horizontal"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <LinearLayout
                    android:id="@+id/rectangleTwoTwoOne"
                    android:background="@drawable/border"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <FrameLayout
                        android:id="@+id/frameFour"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ff3bff23" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rectangleTwoTwoTwo"
                    android:background="@drawable/border"
                    android:paddingRight="@dimen/activity_vertical_margin"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <FrameLayout
                        android:id="@+id/frameFive"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#fffaff6d" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rectangleTwoTwoThree"
                    android:paddingRight="@dimen/activity_vertical_margin"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <FrameLayout
                        android:id="@+id/frameSix"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#044bf972" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rectangleTwoThree"
                android:background="@drawable/border"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <FrameLayout
                    android:id="@+id/frameSeven"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ff3452ff" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#ff050204"/>
</LinearLayout>